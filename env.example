# GainDeuk Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/gaindeuk
REDIS_URL=redis://localhost:6379

# External API Keys
COINGECKO_API_KEY=your_coingecko_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
RSS2JSON_API_KEY=your_rss2json_api_key_here

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LOCAL_AI_URL=http://localhost:11434

# Blockchain Scan APIs (Etherscan 통합 사용)
BSCSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_etherscan_api_key_here

# DeFi/On-chain Data APIs
ALCHEMY_API_KEY=your_alchemy_api_key_here
MORALIS_API_KEY=your_moralis_api_key_here

# Social Media APIs
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# API Rate Limiting
COINGECKO_RATE_LIMIT=30
COINGECKO_MONTHLY_LIMIT=10000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Cache TTL (seconds)
CACHE_TTL_COIN_DATA=300
CACHE_TTL_SIGNALS=900
CACHE_TTL_NEWS=1800
CACHE_TTL_WHALE_DATA=600

# Scheduler Configuration
SCHEDULER_ENABLED=true
HIGH_PRIORITY_INTERVAL=5
MEDIUM_PRIORITY_INTERVAL=15
LOW_PRIORITY_INTERVAL=60

# Alert Configuration
ALERT_MIN_SCORE=80
ALERT_MAX_SCORE=20
NOTIFICATION_ENABLED=true

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY_SECRET=your_api_key_secret_here

# Monitoring
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true
